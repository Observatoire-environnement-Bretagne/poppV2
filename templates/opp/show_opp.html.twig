{%  extends "base.html.twig" %}

{% block body %}
    {% set parameters = app.session.get('parameters') %}
        <!-- ### $App Screen Content ### -->
        <main class='main-content bgc-grey-100'>
          <div id='mainContent'>
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-12">
                    <div class="bgc-white bd bdrs-3 p-20 mB-20">
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h4 class="c-grey-900 mB-20">{{ opp.oppNom }}</h4>
                            </div>
                        </div>
                        <hr class="my-4">
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Objectif :</h6>
                                <p>{{ opp.oppDesc|raw }}</p>
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Technicité de l'observatoire :</h6>
                                <p>{{ opp.oppTechnicite }}</p>
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Année de création :</h6>
                                <p>{{ opp.oppAnneeCreation }}</p>
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Niveau territorial concerné :</h6>
                                <p>{{ opp.oppNivTerrit }}</p>
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Valorisation et diffusion :</h6>
                                <p>{{ opp.oppValo }}</p>
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Structure OPP :</h6>
                                <p>{% if opp.oppPorteurOpp %} {{ opp.oppPorteurOpp.porteurOppNom }}{% endif %}</p>
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Liste des fournisseurs :</h6>
                                {% for fournisseur in fournisseurs %}
                                    <li>{% if fournisseur.lFoUsers %}{{ fournisseur.lFoUsers.Prenom }} {{ fournisseur.lFoUsers.Nom }} {{ fournisseur.lFoUsers.email }}{% endif %}</li>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="row mT-10">
                            <div class="col-md-12">
                                <h6>Liste des gestionnaires :</h6>
                                {% for gestionnaire in gestionnaires %}
                                    <li>{% if gestionnaire.lGoUsers %}{{ gestionnaire.lGoUsers.Prenom }} {{ gestionnaire.lGoUsers.Nom }} ({{ gestionnaire.lGoUsers.email }}){% endif %}</li>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
              </div>
              <!--si liste user a ajouter-->
              <!--div class="row">
                  <div class="col-md-12">
                    <div class="bgc-white bd bdrs-3 p-20 mB-20">

                    </div>
                  </div>
              </div-->
            </div>
          </div>
        </main>

{% endblock body %}